{% extends "base.layout.twig" %}

{% block title %}{{ project.getTitle }} | Cédric Abt — Illustrateur{% endblock %}
{% block bodyattr %}id="top"{% endblock %}

{% block header %}
	<header class="AltHeader">

		<div class="AltHeader-navPrev NavPrev">
			<a href="{{ app.path(app.config.route.names.home) }}" title="projets"><span>&#8592;</span> projets</a>
		</div>

		<h4 class="AltHeader-altTagline AltTagline">
			Cédric Abt
			<img class="AltTagline-logoSmall LogoSmall" src="{{ app.asset('/assets/static/logo-small.png') }}" alt="logo - renard">
			Illustrateur
		</h4>

		<div class="AltHeader-navNext NavNext">
			<a href="{{ app.path(app.config.route.names.about) }}" title="à propos">à propos <span>&#8594;</span></a>
		</div>

	</header>
{% endblock header %}
{% block content %}
	<div class="Content">
		<section class="Content-project Project">
			<h1 class="Project-title Title">{{ project.getTitle }}</h1>
			<p class="Project-info Info">{{ project.getInfos }}</p>
			<div class="Project-desc Desc">
				{# autoescape off because is textile content #}
				{% autoescape false %}
					{{ project.getParsedDescContent }}
				{% endautoescape %}
			</div>
			<div class="Project-projectImg">
				{% for img in project.getImages %}
					<img class="ProjectImg" src="{{ app.asset(project.getAssetPath ~ '/' ~ img) }}" alt="{{ img }}">
				{% endfor %}
			</div>
		</section>
	</div>
{% endblock content %}
